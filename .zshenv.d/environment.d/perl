() {
  local -r LOCAL_LIB=~/perl5

  if [[ -d "${LOCAL_LIB}" ]]; then
    # I am not a Perl person.  I have no idea what these knobs actually
    # do.  They were sourced from a shell configuration that was
    # automatically generated by cpanm (or local::lib or something).
    export PERL5LIB="${LOCAL_LIB}/lib/perl5${PERL5LIB+:}${PERL5LIB}"
    export PERL_LOCAL_LIB_ROOT="${LOCAL_LIB}${PERL_LOCAL_LIB_ROOT+:}${PERL_LOCAL_LIB_ROOT}"
    export PERL_MB_OPT="--install_base \"${LOCAL_LIB}\""
    export PERL_MM_OPT="INSTALL_BASE=${LOCAL_LIB}"
    __zshenv_lib_prepend_path 'PATH' "${LOCAL_LIB}/bin"
  fi
}

# vim:ft=zsh
