alias amend='git commit --amend --date=now'
alias commit='git commit'
alias g='git'
alias ga='git add'
alias gb='git branch --list -vv'
alias gc='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gs='git status'
alias reflog='git log -g --abbrev-commit --pretty="format:%C(auto,yellow)%h%C(auto,reset) %C(auto,blue)%<(15,trunc)%cr%C(auto,reset) %gs"'
alias stash='git stash'

gl() {
  if [ $# -eq 0 ]; then
    git log --color --oneline | head
  else
    git log --oneline ${@}
  fi
}

# Check out an arbitrary tree-ish to an ephemeral directory.  Spawn a subshell
# in the ephemeral checkout.  The checkout will disappear when we exit the
# subshell.  Must be run from inside a Git repository.
git-squiz() {
  local treeish="$1"

  if [[ -z "${treeish}" ]]; then
    echo "Missing mandatory <tree-ish>" >&2
    return 1
  fi

  local checkout_dir="$(mktemp -d -t 'git-ephemeral-checkout')"

  (
    git archive --format=tar "${treeish}" | tar -C "${checkout_dir}" -xf -
    cd "${checkout_dir}"
    "${SHELL}"
  )

  rm -r "${checkout_dir}"
}

