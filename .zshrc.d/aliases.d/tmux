# tmux's command-line interface is very wordy.

alias tat='tmux attach-session -t'

tls() {
  tmux list-sessions | while read session details; do
    colour_yellow
    printf "%s" "${session%:}"
    colour_reset
    echo ": ${details}"
  done
}

tnew() {
  pushd ~ &>/dev/null
  make .tmux.conf >/dev/null
  popd &>/dev/null

  if [ $# -ge 1 ]; then
    tmux -2 new-session -s "$*"
  else
    tmux -2 new-session
  fi
}

# vim:ft=zsh
