#!/usr/bin/env bash

# Write out paths to Maildir cur/new directories.  These directories
# contain mail messages.
#
# (Yes, 'find-maildirs' is technically a misnomer.)

set -e

usage() {
  echo -e "Usage:\n\t$(basename $0) ROOT"
}

main() {
  if [[ $# -ne 1 ]]; then
    usage
    exit 2
  fi

  local root="$1"

  OLDIFS="${IFS}"
  IFS="$(echo -e "\n")"
  while read fn; do
    local basename="${fn##*/}"
    case "${basename}" in
      "cur") echo "${fn}";;
      "new") echo "${fn}";;
    esac
  done <<<$(find "${root}" -mindepth 1 -type d)
  IFS="${OLDIFS}"
}

main "$@"
