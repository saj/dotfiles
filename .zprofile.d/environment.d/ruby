__zprofile_ruby() {
  local -r GEM_USER_DIR="$(ruby -rubygems -e 'puts Gem.user_dir')"

  if [[ -d "${GEM_USER_DIR}" ]]; then
    __zprofile_lib_prepend_path 'PATH' "${GEM_USER_DIR}/bin"
  fi
}

__zprofile_ruby
unfunction __zprofile_ruby

__zprofile_rbenv() {
  local -r RBENV_BASE="${HOME}/.rbenv"

  if [[ -d "${RBENV_BASE}" ]]; then
    __zprofile_lib_prepend_path 'PATH' "${RBENV_BASE}/bin"

    eval "$(rbenv init -)"
  fi
}

__zprofile_rbenv
unfunction __zprofile_rbenv

