__zprofile_go() {
  local -r gopath="${HOME}/.go"

  if [[ -e "${gopath}" ]]; then
    export GOPATH="${gopath}"

    __zprofile_lib_prepend_path 'PATH' "${gopath}/bin"

    # Enable vendoring; introduced in Go 1.5.
    export GO15VENDOREXPERIMENT=1
  fi
}

__zprofile_go
unfunction __zprofile_go

# vim:ft=zsh
